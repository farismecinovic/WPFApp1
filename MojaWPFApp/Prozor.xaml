<Window x:Class="MojaWPFApp.Prozor"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MojaWPFApp"
        mc:Ignorable="d"
        Title="Window1" Height="450" Width="800">
    <DockPanel>
        <UniformGrid Columns="2" DockPanel.Dock="Bottom">
            <Button FontSize="24" Height="63" Margin="0,0,39,0" Click="Dodaj">Dodaj</Button>
            <Button FontSize="24" Click="Odustani">Odustani</Button>
        </UniformGrid>

        <UniformGrid Columns="2" DockPanel.Dock="Bottom">
            <Label FontSize="24" Height="151">Ime:</Label>
            <TextBox FontSize="24" Text="{Binding Ime,  UpdateSourceTrigger=Explicit}"></TextBox>
            <Label FontSize="24">Prezime:</Label>
            <TextBox FontSize="24" Text="{Binding Prezime, UpdateSourceTrigger=Explicit}"></TextBox>
        </UniformGrid>



    </DockPanel>
</Window>
